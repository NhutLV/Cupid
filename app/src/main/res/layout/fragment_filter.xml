<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_toolbar"
            android:padding="@dimen/filter_padding_title"
            android:text="@string/filter_title_show_me"
            android:textAllCaps="true"
            android:textSize="@dimen/filter_text_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_toolbar"
            android:padding="@dimen/filter_padding_title"
            android:text="@string/filter_title_age"
            android:textAllCaps="true"
            android:textSize="@dimen/filter_text_size"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/filter_height_age"
            android:layout_marginTop="@dimen/filter_margin_age">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/filter_padding_age"
                android:background="@color/background_toolbar"
                android:src="@drawable/custom_img_picker"/>

            <com.signatic.library.horizontalpicker.HorizontalPicker
                android:id="@+id/picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/filter_text_size"
                android:textColor="@drawable/custom_text_color_picker"
                app:dividerSize="@dimen/filter_divider"
                app:sideItems="@integer/numSideItems"
                app:values="@array/values_age"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/filter_height_age"
            android:layout_marginTop="@dimen/filter_margin_age">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/filter_padding_age"
                android:background="@color/background_toolbar"
                android:src="@drawable/custom_img_picker"/>

            <com.signatic.library.horizontalpicker.HorizontalPicker
                android:id="@+id/picker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textSize="@dimen/filter_text_size"
                app:dividerSize="@dimen/filter_divider"
                android:textColor="@drawable/custom_text_color_picker"
                app:sideItems="@integer/numSideItems"
                app:values="@array/values_age"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/background_toolbar"
            android:padding="@dimen/filter_padding_title"
            android:text="@string/filter_title_show_user_have"
            android:textAllCaps="true"
            android:textSize="@dimen/filter_text_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_toolbar"
            android:padding="@dimen/filter_padding_title"
            android:text="@string/filter_title_show_user_profiles"
            android:textAllCaps="true"
            android:textSize="@dimen/filter_text_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>