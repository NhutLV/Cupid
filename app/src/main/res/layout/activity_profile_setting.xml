                    android:text="@string/profile_display_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_i_am_here_to"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/i_am_here_to"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_relationship"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/relationship"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_drinking"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/drinking"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_smoking"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/smoking"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_living"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/living"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_kids"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/kids"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_education"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/education"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_job"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/job"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_company"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/company"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <!--end-->

            <!--contact-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar"
                android:paddingBottom="@dimen/profile_padding_toolbar"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/profile_padding_top_title"
                android:text="@string/contact"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_snapchat"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:imeOptions="actionNext"
