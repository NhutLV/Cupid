                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_kik"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/profile_kik"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_instagram"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/profile_instagram"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_oovoo"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/ooovoo"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_skype"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/skype"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <EditText
                    android:id="@+id/et_profile_viber"
                    style="@style/MyStyleEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="@string/viber"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/profile_padding_top_title"
                android:text="@string/profile_title_who_see"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/profile_padding">

                <Spinner
                    android:id="@+id/spinner_who_see"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"/>

                <TextView
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/everyone"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <FrameLayout
                    android:id="@+id/frame_profile_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/filter_height_age"
                    android:layout_below="@+id/txt_age_range_profile1"
                    android:layout_marginTop="@dimen/margin_editText_bottom"
                    android:background="@color/background_toolbar">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/filter_padding_age"
                        android:src="@drawable/custom_img_picker"/>

                    <com.signatic.library.horizontalpicker.HorizontalPicker
                        android:id="@+id/picker_age_range_profile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="2"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@drawable/custom_text_color_picker"
                        android:textSize="@dimen/filter_text_size"
                        app:dividerSize="@dimen/filter_divider"
                        app:sideItems="@integer/numSideItemsAgeRange"
                        app:values="@array/values_age"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/filter_height_age"
                    android:layout_below="@+id/frame_profile_1"
                    android:layout_marginBottom="@dimen/margin_editText_bottom"
                    android:layout_marginTop="@dimen/margin_editText_bottom"
                    android:background="@color/background_toolbar">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/filter_padding_age"
                        android:src="@drawable/custom_img_picker"/>

                    <com.signatic.library.horizontalpicker.HorizontalPicker
                        android:id="@+id/picker_age_range_profile2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="2"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@drawable/custom_text_color_picker"
                        android:textSize="@dimen/filter_text_size"
                        app:dividerSize="@dimen/filter_divider"
                        app:sideItems="@integer/numSideItemsAgeRange"
                        app:values="@array/values_age"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_age_range_profile1"
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:text="@string/age_range"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>
            </RelativeLayout>

            <TextView
                style="@style/MyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_toolbar"
                android:paddingBottom="@dimen/profile_padding_toolbar"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/profile_padding_top_title"
                android:text="@string/profile_title_account"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingTop="@dimen/profile_padding">

                <TextView
                    android:id="@+id/txt_notify_profile"
                    style="@style/MyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profile_margin"
                    android:text="Notifications"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_text_size"/>


                <com.rey.material.widget.Switch
                    android:id="@+id/switch_notify_profile"
                    style="@style/Material.Widget.Switch"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingRight="@dimen/profile_margin"
                    android:switchMinWidth="56dp"
                    app:rd_enable="false"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/profile_padding"
                android:paddingLeft="@dimen/profile_padding"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/profile_padding">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>